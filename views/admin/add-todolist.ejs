<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <section class="section">
        <div class="container">
            <div>
                <form class="product-form" action="add-product" method="POST">
                    <div class="field">
                        <label class="label">List</label>
                        <div class="control">
                            <input class="input is-primary" type="text" placeholder="Enter a List" name="title">
                        </div>
                    </div>
                    <div class="field is-grouped">
                        <div class="control">
                            <button class="button is-link" type="submit">Add List</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <% if (prods.length > 0) { %>
            <% for (let product of prods) { %>
            <div class="columns is-full">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4"><%=product.message%></p>
                        </div>
                    </div>
                    <a class="card-footer-item" href="products/<%=product.id%>/edit">
                        <span class="icon">
                            <i class="mdi mdi-pencil"></i>
                        </span>
                        <span>Edit</span>
                    </a>
                    <a class="card-footer-item" href="products/<%=product.id%>/delete">
                        <span class="icon">
                            <i class="mdi mdi-delete"></i>
                        </span>
                        <span>Delete</span>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Lists Found</h1>
        <% } %>
        </div>
        </div>
    </section>
    <%- include('../includes/scripts.ejs') %>
</body>

</html>